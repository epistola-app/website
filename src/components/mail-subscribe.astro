<section class="py-20">
  <div class="surface-card tone-lilac mx-auto max-w-3xl rounded-[32px] border border-black/5 p-10 text-center shadow-2xl">
    <p class="eyebrow">Newsletter</p>
    <h2 class="mt-4 text-4xl font-semibold text-[var(--color-gray-900)] dark:text-white">
      Operational patterns from document-heavy teams.
    </h2>
    <p class="mt-4 text-sm text-[var(--muted-text)]">
      Monthly insights on governance, compliance, and automation. No noise.
    </p>
    <form class="mt-8 flex flex-col gap-4 sm:flex-row">
      <label class="relative flex-1">
        <span class="sr-only">Email</span>
        <input
          type="email"
          required
          placeholder="you@company.com"
          class="w-full rounded-2xl border border-black/10 bg-white/80 px-5 py-4 text-sm font-medium text-[var(--color-gray-900)] placeholder:text-[var(--color-gray-400)] focus:border-[var(--color-brand-500)] focus:outline-none dark:bg-black/30 dark:text-white"
        />
      </label>
      <button type="submit" class="cta-primary w-full sm:w-auto">
        Subscribe
      </button>
    </form>
    <p class="mt-4 text-xs text-[var(--color-gray-400)]">
      By subscribing you agree to receive Epistola updates. You can unsubscribe anytime.
    </p>
  </div>
</section>
